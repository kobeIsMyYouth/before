<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team.hfut.vehiclechart.mapper.userchart.UserActivePosMapper">
	<resultMap id="BaseResultMap" type="team.hfut.vehiclechart.bean.userchart.UserActivePosBean">
		<id column="id" property="id" />
		<result column="user_id" property="user_id" />
		<result column="lat" property="lat" />
		<result column="lng" property="lng" />
		<result column="record_time" property="record_time" />
		<result column="create_time" property="create_time" />
		<result column="version" property="version" />
	</resultMap>

	<sql id="Base_Column_List">
		user_id,lat,lng,record_time,create_time,version
	</sql>

	<select id="selectResultList" resultType="map" parameterType="string">
		SELECT lng,lat FROM `result_user_activepos`
		WHERE user_id = #{user_id}
		ORDER BY record_time DESC
		LIMIT 20
	</select>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="string">
		select
		<include refid="Base_Column_List" />
		from result_user_activepos
		where id = #{id}
	</select>

	<select id="selectList" resultMap="BaseResultMap"
		parameterType="team.hfut.vehiclechart.bean.userchart.UserActivePosBean">
		select
		<include refid="Base_Column_List" />
		from result_user_activepos
		<where>
			<if test="id != null   ">
				and id = #{id}
			</if>
			<if test="user_id != null and user_id != ''  ">
				and user_id = #{user_id}
			</if>
			<if test="lat != null   ">
				and lat = #{lat}
			</if>
			<if test="lng != null   ">
				and lng = #{lng}
			</if>
			<if test="record_time != null and record_time != ''  ">
				and record_time = #{record_time}
			</if>
			<if test="create_time != null and create_time != ''  ">
				and create_time = #{create_time}
			</if>
			<if test="version != null   ">
				and version = #{version}
			</if>
		</where>
	</select>

	<select id="selectCount" resultType="int"
		parameterType="team.hfut.vehiclechart.bean.userchart.UserActivePosBean">
		select count(0)
		from result_user_activepos
		<where>
			<if test="id != null  ">
				and id = #{id}
			</if>
			<if test="user_id != null and user_id != '' ">
				and user_id = #{user_id}
			</if>
			<if test="lat != null  ">
				and lat = #{lat}
			</if>
			<if test="lng != null  ">
				and lng = #{lng}
			</if>
			<if test="record_time != null and record_time != '' ">
				and record_time = #{record_time}
			</if>
			<if test="create_time != null and create_time != '' ">
				and create_time = #{create_time}
			</if>
			<if test="version != null  ">
				and version = #{version}
			</if>
		</where>
	</select>
</mapper>
