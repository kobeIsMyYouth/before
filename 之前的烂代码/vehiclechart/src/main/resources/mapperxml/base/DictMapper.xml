<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team.hfut.vehiclechart.mapper.base.DictMapper">
	<resultMap id="BaseResultMap" type="team.hfut.vehiclechart.bean.base.DictBean">
		<id column="id" property="id" />
		<result column="dictname" property="dictname" />
		<result column="sort" property="sort" />
		<result column="remark" property="remark" />
	</resultMap>
	
	<resultMap id="TreeResultMap" type="team.hfut.vehiclechart.bean.base.DictBean">
		<id column="id" property="id" />
		<result column="pid" property="pid" />
		<result column="dictname" property="dictname" />
		<result column="sort" property="sort" />
		<result column="remark" property="remark" />
		<collection property="childlist"  select="selectChildTree" column="{pid = id}"/>
	</resultMap>

	<sql id="Base_Column_List">
		id,dictname,sort,remark
	</sql>

	<select id="selectByParentId" resultMap="BaseResultMap" parameterType="string">
		select
		<include refid="Base_Column_List" />
		from sys_dict
		where id like concat(#{pid},'__')
	</select>

	<select id="selectChildTree" resultMap="TreeResultMap" parameterType="team.hfut.vehiclechart.bean.base.DictBean">
		select
		<include refid="Base_Column_List" />
		from sys_dict
		where id like concat(#{pid},'__')
	</select>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="string">
		select
		<include refid="Base_Column_List" />
		from sys_dict
		where id = #{id}
	</select>

	<select id="selectList" resultMap="BaseResultMap"
		parameterType="team.hfut.vehiclechart.bean.base.DictBean">
		select
		<include refid="Base_Column_List" />
		from sys_dict
		<where>
			<if test="id != null and id != ''  ">
				and id = #{id}
			</if>
			<if test="dictname != null and dictname != ''  ">
				and dictname = #{dictname}
			</if>
			<if test="sort != null   ">
				and sort = #{sort}
			</if>
			<if test="remark != null and remark != ''  ">
				and remark = #{remark}
			</if>
		</where>
	</select>

	<select id="selectCount" resultType="int"
		parameterType="team.hfut.vehiclechart.bean.base.DictBean">
		select count(0)
		from sys_dict
		<where>
			<if test="id != null and id != '' ">
				and id = #{id}
			</if>
			<if test="dictname != null and dictname != '' ">
				and dictname = #{dictname}
			</if>
			<if test="sort != null  ">
				and sort = #{sort}
			</if>
			<if test="remark != null and remark != '' ">
				and remark = #{remark}
			</if>
		</where>
	</select>

	<insert id="insertSelective" parameterType="team.hfut.vehiclechart.bean.base.DictBean">
		insert into sys_dict
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null and id != '' ">
				id,
			</if>
			<if test="dictname != null and dictname != '' ">
				dictname,
			</if>
			<if test="sort != null  ">
				sort,
			</if>
			<if test="remark != null and remark != '' ">
				remark,
			</if>
		</trim>
		<trim prefix="values(" suffix=")" suffixOverrides=",">
			<if test="id != null and id != '' ">
				#{id},
			</if>
			<if test="dictname != null and dictname != '' ">
				#{dictname},
			</if>
			<if test="sort != null  ">
				#{sort},
			</if>
			<if test="remark != null and remark != '' ">
				#{remark},
			</if>
		</trim>
	</insert>

	<update id="updateByKeySelective" parameterType="team.hfut.vehiclechart.bean.base.DictBean">
		update sys_dict
		<set>
			<if test="dictname != null and dictname != '' ">
				dictname = #{dictname},
			</if>
			<if test="sort != null  ">
				sort = #{sort},
			</if>
			<if test="remark != null and remark != '' ">
				remark = #{remark},
			</if>
		</set>
		where id = #{id}
	</update>

	<delete id="deleteByPrimaryKey" parameterType="string">
		delete from sys_dict where id = #{id}
	</delete>
	
	<delete id="deleteSelective" parameterType="team.hfut.vehiclechart.bean.base.DictBean">
		delete from sys_dict
		<where>
			<if test="id != null and id != '' ">
				and id = #{id}
			</if>
			<if test="dictname != null and dictname != '' ">
				and dictname = #{dictname}
			</if>
			<if test="sort != null  ">
				and sort = #{sort}
			</if>
			<if test="remark != null and remark != '' ">
				and remark = #{remark}
			</if>
		</where>
	</delete>
</mapper>
